<% if Favorite.find_by(user_id: current_user.id, blog_id: blog.id) %>
# お気に入り削除機能
  <%= link_to favorite_path(id: current_user.favorites.find_by(blog_id: blog.id)), method: :delete, remote: true, class: "favorite-link delete-#{blog.id}" do %>
    <i class="material-icons">star</i>
  <% end %>
<% else %>
# お気に入り機能
  <%= link_to favorites_path(blog_id: blog.id), method: :post, remote: true, class: "favorite-link post-#{blog.id}" do %>
    <i class="material-icons">star_border</i>
    <% end %>
<% end %>
<%= blog.favorites.length %>
